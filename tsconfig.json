{
  "compilerOptions": {
    // "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "./dist",
    // "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "linked-module-name": ["node_modules/aoc-copilot/src"],
      "linked-module-name/*": ["node_modules/aoc-copilot/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "test"]
}
